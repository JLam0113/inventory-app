<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>Items</h1>
  <% items.forEach(function(item) { %>
      <a href="/item/<%= item._id %>"><%= item.name %></a>
      <br>
    <% }); %>
    <br>
    <br>
    <form id="createItem" method="POST" action="/item/create" onsubmit="event.preventDefault(); formSubmit()">
      <h3>Create Item</h3>
      <label>Item Name</label>
      <br>
      <input type="text" name="name">
      <br>
      <label>Item Category</label>
      <br>
      <select name="category" id="category">
      <% categories.forEach(function(category) { %>
        <option value="<%= category._id %>"><%= category.name %></option>
      <% }); %>
    </select>
      <br>
      <label>Item Description</label>
      <br>
      <textarea type="text" name="description" style="width: 100%; height:100px"></textarea>
      <br>
      <label>Item Price</label>
      <br>
      <input type="text" name="price">
      <br>
      <label>Item Quantity</label>
      <br>
      <input type="text" name="quantity">
      <br>
      <label>Item URL</label>
      <br>
      <input type="text" id="inputURL" style="width: 100%;">
      <input type="hidden" name="url" id="url">
      <br>
      <button type="submit">Create</button>
  </form>

  <script>
    function formSubmit(){
      document.getElementById("url").value = encodeURIComponent(document.getElementById("inputURL").value);
      document.getElementById("createItem").submit();
    }
  </script>
</body>

</html>